FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "alpha.bubble.*"
    {
        nAlphaCorr      3;
        nAlphaSubCycles 3;
        cAlpha          1;
        icAlpha         0;

        MULESCorr       yes;
        nLimiterIter    10;
        alphaApplyPrevCorr  yes;

        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-10;
        relTol          0;
        minIter         1;
    }

    pcorr
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-10;
        relTol          0;
    }

    "(p_rgh|p_rghFinal)"
    {
        solver          GAMG;
        smoother        FDIC;
        tolerance       1e-06;
        relTol          0;
    }
//     "(p_rgh|p_rghFinal)"
//     {
//         solver          PCG;
//         preconditioner  FDIC;
//         tolerance       1e-06;
//         relTol          0;
//     }
    
    "(Ep|EpFinal)"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-06;
        relTol          0;
    }

//     "(U|UFinal)"
//     {
//         solver          PBiCG;
//         preconditioner  DILU;
//         tolerance       1e-06;
//         relTol          0;
//     }
    "(U|UFinal)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        nSweeps         1;
        tolerance       1e-7;
        relTol          0;
        minIter         1;
    }
}

PIMPLE
{
    momentumPredictor yes;
    nCorrectors     50;
    nNonOrthogonalCorrectors 0;
    nOuterCorrectors 1;
    pRefCell         0;
//     pRefPoint       (1.0 1.0 0.0);
    pRefValue        0.0;
    
    correctPhi      yes;
    
    residualControl
    {
        U
        {
            tolerance   1e-04;
            relTol      0;
        }
        p_rgh
        {
            tolerance   1e-04;
            relTol      0;
        }
    }
}

relaxationFactors
{
    equations
    {
        ".*" 1;
    }
}

cache
{
    grad(U);
}

